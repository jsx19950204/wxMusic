.tab-wrap{
  display: flex;
  width: 100%;
  height: 100%;
}
.tab-item{
  flex: 0 1 25%;
  height: 100%;
  text-align: center;
}
.tab-item text{
  position: relative;
  font-size: 30rpx;
}
.tab-item text.active{
  font-size: 34rpx;
  font-weight: bold;
}
.tab-item .unread::after{
  position: absolute;
  content: '';
  top: -8rpx;
  right: -24rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #f00;
}