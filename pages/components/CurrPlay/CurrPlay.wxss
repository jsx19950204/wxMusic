/* 页面最下部播放器 */
.play-min-wrap{
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  padding: 0 20rpx;
  background: #fff;
  border-top: 1px solid #ddd;
  z-index: 9;
}
.play-min-wrap image{
  flex: 0 0 90rpx;
  height: 90rpx;
  margin: 15rpx 20rpx 0 0;
}
.play-min-wrap .info{
  flex: 1;
  padding: 10rpx 0;
}
.play-min-wrap .info text{
  display: block;
  line-height: 40rpx;
  color: #888;
  font-size: 24rpx;
}
.play-min-wrap .info .title{
  line-height: 60rpx;
  font-size: 28rpx;
  color: #333;
}
.play-min-wrap .play-icon,
.play-min-wrap .list-icon{
  flex: 0 0 60rpx;
  margin-top: 30rpx;
}
.play-min-wrap .play-icon canvas{
  width: 60rpx;
  height: 60rpx;
}