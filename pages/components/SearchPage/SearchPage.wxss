.search-page{
  position: relative;
  width: 100%;
  min-height: 100vh;
  padding: 0 40rpx;
  font-size: 24rpx;
}

/* 顶部搜索框 */
.header{
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
}
.header .back,
.header .singer,{
  flex: 0 0 60rpx;
  height: 60rpx;
}
.header .search-input{
  flex: 1;
}
.header .search-input input{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
}
.header .search-input input:focus{
  border-bottom: 1px solid #333;
}

/* 广告区 */
.ad-wrap{
  position: relative;
  width: 100%;
  height: 100rpx;
}
.ad-wrap .ad{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  border: 1px solid #ddd;
}
.ad-wrap .label{
  position: absolute;
  top: 5rpx;
  left: 5rpx;
  padding: 5rpx;
  background: #ccc;
  color: #fff;
  font-size: 20rpx;
}
.ad-wrap .close-btn{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 24rpx;
  height: 24rpx;
}

/* 历史记录 */
.history-wrap .title-wrap{
  position: relative;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  justify-content: space-between;
}
.history-wrap .title-wrap .title{
  color: #333;
  font-weight: bold;
}
.history-wrap .title-wrap .clear{
  position: absolute;
  top: 0;
  right: 0;
  float: right;
  width: 60rpx;
  height: 60rpx;
}
.history-wrap .list{
  display: flex;
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
}
.history-wrap .list .item{
  padding: 10rpx 20rpx;
  background: #ddd;
  border-radius: 30rpx;
  margin-right: 20rpx;
  color: #333;
}

/* 热搜榜 */
.hot-search .title{
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  font-weight: bold;
}
.hot-search .list .item{
  display: flex;
  width: 100%;
  height: 120rpx;
  padding: 20rpx 0;
}
.hot-search .item .ranking{
  flex: 0 0 100rpx;
  line-height: 80rpx;
  text-align: center;
  color: #888;
}
.hot-search .item .ranking.excellent{
  color: #f00;
}
.hot-search .item .content{
  flex: 1;
}
.hot-search .item .content .title{
  height: 50rpx;
  line-height: 50rpx;
}
.hot-search .item .content .title .name{
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 10rpx;
}
.hot-search .item .content .title .count{
  font-size: 20rpx;
  color: #aaa;
}
.hot-search .item .content .title .hot{
  font-size: 34rpx;
  font-style: italic;
  color: #f00;
  margin-left: 20rpx;
}
.hot-search .item .content .desc{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #999;
}